Edit ~/.gitconfig File

# This is Git's per-user configuration file.
[user]
	name = Username Git
	email = example@email.com

Create Alias (Shortcuts) to Git Commands
[alias]
	st = status
	co = checkout
	br = branch
	ci = commit

Define Highlight Git in Terminal
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = red

Map Path Exclude File Global Git
[core]
	excludesfile = /Users/marlondarosa/.gitexcludes
